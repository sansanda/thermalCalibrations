<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="OFF">
    <Appenders>
        <!-- Simple console logger --> 
        <Console name="LogToConsole" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger - %msg%n"/>
        </Console>
    </Appenders>
    <Loggers>
      
      	<Logger name="ports" level="all" additivity="false">
            <AppenderRef ref="LogToConsole"/>
        </Logger>
        <Logger name="trigger" level="off" additivity="false">
            <AppenderRef ref="LogToConsole"/>
        </Logger>
        <Logger name="status" level="off" additivity="false">
            <AppenderRef ref="LogToConsole"/>
        </Logger>
        <Logger name="route" level="off" additivity="false">
            <AppenderRef ref="LogToConsole"/>
        </Logger>
        <Logger name="sense" level="all" additivity="false">
            <AppenderRef ref="LogToConsole"/>
        </Logger>
        <Logger name="system" level="all" additivity="false">
            <AppenderRef ref="LogToConsole"/>
        </Logger>
    	<Logger name="communications" level="all" additivity="false">
            <AppenderRef ref="LogToConsole"/>
        </Logger>
        <Logger name="expansion_slots" level="off" additivity="false">
            <AppenderRef ref="LogToConsole"/>
        </Logger>
        <Logger name="expansion_cards" level="off" additivity="false">
            <AppenderRef ref="LogToConsole"/>
        </Logger>
        <Logger name="testing" level="all" additivity="false">
            <AppenderRef ref="LogToConsole"/>
        </Logger>
        <Logger name="multimeters" level="all" additivity="false">
            <AppenderRef ref="LogToConsole"/>
        </Logger>
        <Logger name="format" level="all" additivity="false">
            <AppenderRef ref="LogToConsole"/>
        </Logger>
        <Logger name="units" level="all" additivity="false">
            <AppenderRef ref="LogToConsole"/>
        </Logger>
        <Logger name="common" level="info" additivity="false">
            <AppenderRef ref="LogToConsole"/>
        </Logger>
        <Logger name="trace" level="info" additivity="false">
            <AppenderRef ref="LogToConsole"/>
        </Logger>
        <Logger name="output" level="info" additivity="false">
            <AppenderRef ref="LogToConsole"/>
        </Logger>
        <Logger name="source_meters.KeithleyK2430" level="info" additivity="false">
            <AppenderRef ref="LogToConsole"/>
        </Logger>
        <Root level="off">
            <AppenderRef ref="LogToConsole"/>
        </Root>
        
    </Loggers>
</Configuration>